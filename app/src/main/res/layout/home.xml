<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:id="@+id/scrollView2" >

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/gradient_white"
                android:text="Latest Update"
                android:id="@+id/latestUpdate"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:id="@+id/listViewNoticeHome"
                android:layout_below="@+id/latestUpdate"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_below="@+id/listViewNoticeHome"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="25dp"
                        android:textSize="16dp"
                        android:background="@drawable/gradient_white"
                        android:text="Fortnightly Profit"
                        android:id="@+id/textViewFortnightlyProfit" />
                    <WebView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/webViewFortnight" />
                    <!--<fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.MapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>-->

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:textSize="16dp"
                        android:background="#0475a1"
                        android:text="Stock Report"
                        android:onClick="stockClicked"
                        android:gravity="center_horizontal"
                        android:id="@+id/textViewStockReport" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:layout_marginTop="1dp"
                        android:background="#028ec4"
                        android:text="Information about LPG Sales"
                        android:gravity="center_horizontal"
                        android:id="@+id/textViewLPGUpliftment" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:textSize="16dp"
                        android:layout_marginTop="1dp"
                        android:background="#028ec4"
                        android:text="LGP Upliftment"
                        android:onClick="LPGUpliftmentClicked"
                        android:gravity="center_horizontal"
                        android:id="@+id/textViewAnnualReport" />

                    <!--<TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:layout_marginTop="1dp"
                        android:background="#028ec4"
                        android:text="Prabhat"
                        android:gravity="center_horizontal"
                        android:id="@+id/textViewPrabhat" />-->

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:textSize="16dp"
                        android:background="#028ec4"
                        style="?android:attr/buttonStyleSmall"
                        android:text="Tenders"
                        android:onClick="tendersClicked"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:id="@+id/buttonTenders" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="@color/windowBackground"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:textSize="24sp"
                            android:background="#c6c2c2"
                            android:text="Contact Us"
                            android:gravity="center_horizontal"
                            android:id="@+id/textViewNotice" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="G.P.O BOx 1140 Babarmahal"
                            android:id="@+id/textViewContact1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Phone:(977-1)4262780,4263418,4263482,4263485"
                            android:id="@+id/textViewContact2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="(Fax:977-1)4263499"
                            android:id="@+id/textViewContact3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Email:info@nepaloil.com.np"
                            android:id="@+id/textViewContact4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="URL:www.nepaloil.com.np"
                            android:id="@+id/textViewContact5" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button" />


</LinearLayout>